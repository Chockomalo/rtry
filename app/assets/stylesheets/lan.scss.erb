@font-face {
  font-family: "kostic";
  src: url(<%=asset_path("Kostic-Regular.ttf")%>) format('truetype');
}
@font-face {
  font-family: "kostic";
  src: url(<%=asset_path("Kostic-Bold.ttf")%>) format('truetype');
  font-weight: bold;
}
@font-face {
  font-family: "kostic";
  src: url(<%=asset_path("Kostic-Thin.ttf")%>) format('truetype');
  font-weight: lighter;
}

.kostic{
  font-family: "kostic";
}
.circle{
  border-radius: 50%;
  display: inline-block;
  padding-top: 10px;
  height: 70px;
  width: 80px;
}

.landing-form{
  border: none;
  outline: none;
  border-bottom: solid 1px #E43D7A;
  font-size: 1.5em;
  color: #C8376C;
}


/*Placeholder navegadores */

::-webkit-input-placeholder{/*chrome, zafari opera*/
    color: #E43D7A;
    opacity: 0.6;
}
:-moz-placeholder{/*firefox 4 to 18*/
  color: #E43D7A;
  opacity: 0.6;
}
::-moz-placeholder{/*firefox 19+*/
  color: #E43D7A;
  opacity: 0.6;
}
:-ms-input-placeholder{ /*explores 10+*/
  color: #E43D7A;
  opacity: 0.6;
}
